      </tr>
      <tr>
        <td class="header lean">Date Created</td>
        <td>{{ metadata.date_created }}</td>
      </tr>
    </table>
  </div>

  <div class="page">
    <!-- Introduction: Inputs -->
    <h3 id="introduction-inputs"><span>1.1</span>Inputs</h3>
    <table>
      <tr>
